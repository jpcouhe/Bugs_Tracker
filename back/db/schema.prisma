generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id Int @id @default(autoincrement())
  firstname String
  lastname String
  email String @unique
  password String
  phone String
  contribution Contribution[]
  role Role @relation(fields: [roleId], references:[id])
  roleId Int 
  tickets Ticket[]
  comments Comment[]
}

model Role {
  id Int @id @default(autoincrement())
  rolename String
  user User[]
}


model Projects {
  id Int @id @default(autoincrement())
  name String
  description String?
  createdAt DateTime @default(now())
  contribution Contribution[]
  tickets Ticket[]
}


model Contribution {
  user User @relation(fields: [userId], references:[id], onUpdate: Cascade, onDelete: Restrict)
  userId Int
  project Projects @relation(fields: [projectId], references:[id], onDelete: Cascade)
  projectId Int


  @@id([userId, projectId])
}



model Ticket {
  id Int @id @default(autoincrement()) 
  title String
  description String
  estimateTime Int
  createdAt DateTime @default(now())
  user User @relation(fields: [userId], references:[id])
  userId Int
  project Projects @relation(fields: [projectId], references:[id], onDelete: Cascade)
  projectId Int
  status Status @relation(fields: [statusId], references:[id])
  statusId Int
  priority Priority @relation(fields: [priorityId], references:[id])
  priorityId Int
  type Type @relation(fields: [typeId], references:[id])
  typeId Int
  comments Comment[]


}

model Comment {
  id Int @id @default(autoincrement())
  content String
  createdAt DateTime @default(now())
  ticket Ticket @relation(fields: [ticketId], references:[id])
  ticketId Int 
  user User @relation(fields: [userId], references:[id])
  userId Int
}




model Status {
  id Int @id @default(autoincrement())
  name String
  tickets Ticket[]
}

model Priority {
  id Int @id @default(autoincrement())
  name String
  tickets Ticket[]
}

model Type {
  id Int @id @default(autoincrement())
  name String
  tickets Ticket[]
}
